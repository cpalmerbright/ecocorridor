<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<%= form_tag(plants_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Plants" %>
    <%= submit_tag "Search" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Id number</th>
      <th>Common name</th>
      <th>Scientific name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.id_number %></td>
        <td><a href='<%= plant_path(plant) %>'> <%= plant.common_name %></a></td>
        <td><a href='<%= plant_path(plant) %>'> <%= plant.scientific_name %></a></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path %>
